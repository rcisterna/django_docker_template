# Ejemplo de archivo de entorno .env
# Se incluye en el repositorio para que cada desarrollador pueda crear su configuración

# Configuracion general
DDT_IN_DKR=true
DDT_ROOT=/opt/services/{{ project_name }}
DDT_ENV=production

# Clave secreta. No debe cambiar una vez el sistema ya esta en funcionamiento.
# https://docs.djangoproject.com/en/2.1/ref/settings/#std:setting-SECRET_KEY
# Se puede generar una nueva clave con: openssl rand -base64 32
DDT_SECRET_KEY=secret-key-hash

# Configuracion del servidor HTTP
# Los dominios deben ir separados por un espacio (multiples dominios no soportados aún)
DDT_PORT=80
DDT_API_DOMAINS=api.host.domain.com
DDT_VUE_DOMAINS=host.domain.com

# Configuracion para renovacion automatica de certificados SSL
DDT_SSL_NAME={{ project_name }}
DDT_SSL_MAIL=ssl@dom.cl

# Se requiere la version de poetry (python dependency manager)
POETRY_VERSION=0.12.11

# Configuracion de Django
# Credenciales del superusuario por defecto
DDT_SU_USER=user
DDT_SU_MAIL=su@dom.cl
DDT_SU_PASS=password

# Requerido por Django
DJANGO_SETTINGS_MODULE

# Configuracion de PostgreSQL
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=database
